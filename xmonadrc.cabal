name:          xmonadrc
version:       0.1.0.0
synopsis:      Peter's XMonad Configuration
homepage:      http://www.pmade.com
license:       BSD3
license-file:  LICENSE
author:        Peter Jones <pjones@pmade.com>
maintainer:    Peter Jones <pjones@pmade.com>
copyright:     Copyright (c) 2013,2014 Peter Jones
category:      Graphics
build-type:    Simple
cabal-version: >=1.8

------------------------------------------------------------------------------
library
  hs-source-dirs: src
  ghc-options: -Wall 

  build-depends: base           >= 4.0  && < 5.0
               , X11            >= 1.6  && < 2.0
               , bytestring     >= 0.9  && < 0.11
               , containers     >= 0.4  && < 0.6
               , directory      >= 1.1  && < 1.3
               , filepath       >= 1.3  && < 1.4
               , libmpd         >= 0.8  && < 1.0
               , parsec         >= 3.1  && < 3.2
               , text           >= 0.11 && < 1.0
               , xmonad         == 0.11
               , xmonad-contrib == 0.11.3
               , xmonad-extras  == 0.12

------------------------------------------------------------------------------
executable xmonadrc
  main-is: xmonadrc.hs
  ghc-options: -Wall
  build-depends: base
               , xmonad
               , xmonad-contrib
               , xmonadrc

